<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:background="@color/white">

    <TextView
        android:id="@+id/vacancy_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textSize="17sp"
        android:textColor="@color/yaga_blue"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:text="Vacancy Title"/>

    <TextView
        android:id="@+id/advertiser_by"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textSize="15sp"
        android:singleLine="true"
        android:layout_below="@+id/vacancy_title"
        android:textColor="@color/black"
        android:text="by"/>

    <TextView
        android:id="@+id/vacancy_advertiser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textSize="17sp"
        android:singleLine="true"
        android:layout_alignTop="@+id/advertiser_by"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:textColor="@color/yaga_orange"
        android:ellipsize="end"
        android:text="Advertiser"/>


</RelativeLayout>